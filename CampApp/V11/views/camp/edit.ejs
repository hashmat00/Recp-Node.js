<% include ../partials/header %>
    <div class="container">
        <div class="row">
            
            <h1 class="text-center">Edit <%= camp.name %></h1>
            
            <div style="width: 50%; margin: 0 auto;">
                
                <form  action="/camp/<%= camp._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                    <input  class="form-control" type="text" name="camp[name]" value="<%= camp.name %>" required>
                    </div>
                     <div class="form-group">
                    <input  class="form-control" type="text" name="camp[image]" value="<%= camp.image %>" required>
                    </div>
                    <div class="form-group">
                    <input  class="form-control" type="text" name="camp[description]" value="<%= camp.description %>" required>
                    </div>
                    <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                 </br>
            <a class="text-center" href="/camp">Go Back</a>
            </div>
            
           
         </div>
    </div>

<% include ../partials/footer %>